# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# End every file with a newline
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,less,scss}]
indent_style = space
indent_size = 2

[*.{js,json}]
indent_style = space
indent_size = 2

[*.{html,hbs}]
indent_style = tab
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[*.xml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.inc]
indent_style = tab
indent_size = 2